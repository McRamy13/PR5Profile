<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/postal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="@dimen/card_corner_radius_dimen"
    card_view:cardElevation="@dimen/card_elevation_dimen"
    card_view:cardUseCompatPadding="true">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/cat_List_imgCat"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintDimensionRatio=",16:9"
            card_view:layout_constraintEnd_toStartOf="@+id/list_Cat_Item_verticalGuideline"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintVertical_bias="0.526"
            card_view:srcCompat="@drawable/cat1" />

        <android.support.constraint.Guideline
            android:id="@+id/list_Cat_Item_verticalGuideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            card_view:layout_constraintGuide_begin="114dp" />

        <ImageView
            android:id="@+id/cat_List_iconMail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_small"
            card_view:layout_constraintStart_toStartOf="@+id/list_Cat_Item_verticalGuideline"
            card_view:layout_constraintTop_toBottomOf="@+id/cat_List_iconName"
            card_view:srcCompat="@drawable/ic_action_mail_tinted" />

        <TextView
            android:id="@+id/cat_List_lblName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_start_medium"
            android:layout_marginStart="@dimen/margin_start_medium"
            android:layout_marginTop="@dimen/margin_small"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            card_view:layout_constraintBottom_toBottomOf="@+id/cat_List_iconName"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toEndOf="@+id/cat_List_iconName"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintVertical_bias="1.0"
            tools:text="Name" />

        <ImageView
            android:id="@+id/cat_List_iconName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_start_medium"
            card_view:layout_constraintStart_toEndOf="@+id/cat_List_imgCat"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:srcCompat="@drawable/ic_action_profile" />

        <TextView
            android:id="@+id/cat_List_lblMail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_start_medium"
            android:layout_marginStart="@dimen/margin_start_medium"
            android:layout_marginTop="@dimen/margin_small"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            card_view:layout_constraintBottom_toBottomOf="@+id/cat_List_iconMail"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.0"
            card_view:layout_constraintStart_toEndOf="@+id/cat_List_iconMail"
            card_view:layout_constraintTop_toBottomOf="@+id/cat_List_lblName"
            card_view:layout_constraintVertical_bias="1.0"
            tools:text="mail" />

        <ImageView
            android:id="@+id/cat_List_iconPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_start_medium"
            android:layout_marginStart="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_small"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintStart_toStartOf="@+id/list_Cat_Item_verticalGuideline"
            card_view:layout_constraintTop_toBottomOf="@+id/cat_List_imgWeb"
            card_view:srcCompat="@drawable/ic_action_phone_tinted" />

        <TextView
            android:id="@+id/cat_List_lblPhone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_start_medium"
            android:layout_marginStart="@dimen/margin_start_medium"
            android:layout_marginTop="@dimen/margin_small"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            card_view:layout_constraintBottom_toBottomOf="@+id/cat_List_iconPhone"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toEndOf="@+id/cat_List_iconPhone"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintVertical_bias="1.0"
            tools:text="654873298" />

        <ImageView
            android:id="@+id/cat_List_imgWeb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_small"
            card_view:layout_constraintStart_toStartOf="@+id/list_Cat_Item_verticalGuideline"
            card_view:layout_constraintTop_toBottomOf="@+id/cat_List_iconMail"
            card_view:srcCompat="@drawable/ic_action_web_tinted" />

        <TextView
            android:id="@+id/cat_List_txtWeb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_start_medium"
            android:layout_marginStart="@dimen/margin_start_medium"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            card_view:layout_constraintBottom_toBottomOf="@+id/cat_List_imgWeb"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.0"
            card_view:layout_constraintStart_toEndOf="@+id/cat_List_imgWeb"
            card_view:layout_constraintTop_toBottomOf="@+id/cat_List_lblMail"
            card_view:layout_constraintVertical_bias="1.0"
            tools:text="web" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>